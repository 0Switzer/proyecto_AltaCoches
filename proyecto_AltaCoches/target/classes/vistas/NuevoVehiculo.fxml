<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controladores.NuevoVehiculoController">
   <children>
      <AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass">
          <stylesheets>
              <URL value="@estilos.css" />
          </stylesheets>
         <children>
            <Label layoutX="72.0" layoutY="30.0" text="Alta de nuevo vehículo" />
            <Label layoutX="72.0" layoutY="85.0" text="Modelo" />
            <Label layoutX="72.0" layoutY="122.0" text="Color" />
            <Label layoutX="72.0" layoutY="160.0" prefHeight="20.0" prefWidth="135.0" text="Año de matriculación" />
            <Label layoutX="72.0" layoutY="198.0" stylesheets="@estilos.css" text="Precio" />
            <Label layoutX="69.0" layoutY="281.0" text="Activo" />
            <Button fx:id="botonRegistrar" layoutX="253.0" layoutY="315.0" mnemonicParsing="false" onAction="#registrarVehiculo" styleClass="botonesNormales" text="Registrar" />
            <Button fx:id="botonImagen" layoutX="421.0" layoutY="231.0" mnemonicParsing="false" onAction="#subirImagen" styleClass="botonesNormales" text="Imagen" />
            <TextField fx:id="campoModelo" layoutX="222.0" layoutY="81.0" prefHeight="25.0" prefWidth="250.0" />
            <TextField fx:id="campoColor" layoutX="222.0" layoutY="118.0" prefHeight="25.0" prefWidth="150.0" />
            <TextField fx:id="campoMatriculacion" layoutX="222.0" layoutY="156.0" prefHeight="25.0" prefWidth="150.0" />
            <TextField fx:id="campoPrecio" layoutX="222.0" layoutY="194.0" prefHeight="25.0" prefWidth="150.0" />
            <TextField fx:id="campoSubirImagen" editable="false" layoutX="70.0" layoutY="231.0" prefHeight="25.0" prefWidth="302.0" />
            <CheckBox fx:id="cb_activo" disable="true" layoutX="112.0" layoutY="283.0" mnemonicParsing="false" selected="true" />
         </children>
      </AnchorPane>
   </children>
</HBox>
